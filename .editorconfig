# EditorConfig - https://EditorConfig.org/

# C++ files handled by .clang-format.

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{c,h}]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[CMakeLists.txt]
indent_style = tab
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
trim_trailing_whitespace = true

